<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#17DA2B"
        android:gravity="center"
        android:text="@string/Textview"
        android:textColor="#1C36BD" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/Label_NamDuongLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_NamDuongLich" />

        <EditText
            android:id="@+id/edt_NamDuongLich"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:importantForAutofill="no"
            android:text=""
            tools:ignore="LabelFor,TextFields" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_ChuyenDoi"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="@string/btn_ChuyenDoi" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Label_NamAmLich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Label_NamAmLich" />

        <EditText
            android:id="@+id/edt_NamAmLich"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:importantForAutofill="no"
            android:text=""
            tools:ignore="LabelFor,TextFields" />
    </TableRow>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#17DA2B"
        android:gravity="center"
        android:text="" />
</TableLayout>